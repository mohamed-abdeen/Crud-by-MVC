@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Update Department </h1>

<form asp-action="Edit">
    <div asp-validation-summary="All"></div>
    <input hidden asp-for="Id" />
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateofCreation"></label>
        <input class="form-control" asp-for="DateofCreation" />
        <span asp-validation-for="DateofCreation"></span>
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />

    | <a asp-action="Index" cite="btn btn-light">Back To List</a>
</form>

@section validationscriptsection{

    <partial name="_ValidationScriptsPartial" />
}